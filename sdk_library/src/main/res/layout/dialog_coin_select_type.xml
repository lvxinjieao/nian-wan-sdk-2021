<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sdk_choosepay_backgrount_ptb"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- 最上面充值中心 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/sdk_backgrount_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mch_pay_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/sdk_icon_cancel" />

        <TextView
            android:id="@+id/tx_mch_select_ptb_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="平台币"
            android:textColor="#8c8c8c"
            android:textSize="22dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tx_mch_select_ptb_gameptb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="应付款平台币数量 :"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="100.00"
            android:textColor="#ff4e00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ptb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ptb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/charge_select" />

        <ImageView
            android:id="@+id/img_ptb_un"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/charge_unselect"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tx_mch_select_ptb_userptb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="平台币:"
            android:textColor="#8c8c8c"
            android:textSize="16sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ptb_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ptb_bind"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/charge_select"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_ptb_bind_un"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/charge_unselect" />

        <TextView
            android:id="@+id/tx_mch_select_ptb_bindptb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="绑定平台币:"
            android:textColor="#8c8c8c"
            android:textSize="16sp"
            android:typeface="serif" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_mch_dialog_ptbpay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/sdk_green_button"
        android:text="立即支付"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

</LinearLayout>