<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/charge_accont_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户账号 : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/charge_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="25"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/charge_price_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额 : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/charge_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/charge_good_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称 : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/charge_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="25"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/charge_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="gone"
         android:textSize="15sp"/>

</LinearLayout>